{
  "manifest_version": 3,
  "name": "Youtube Watchmarker",
  "description": "Automatically mark videos on Youtube that you have already watched.",
  "homepage_url": "https://github.com/shoaibshakeel381/youtube-watchmarker/tree/devel",
  "version": "4.7.3",
  "permissions": [
    "storage",
    "alarms",
    "downloads",
    "history",
    "tabs",
    "cookies",
    "webRequest",
    "notifications"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://*.supabase.co/*",
    "https://*.supabase.in/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": [
        "polyfill.js",
        "youtube.js"
      ]
    }
  ],
  "options_ui": {
    "page": "content/index.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Youtube Watchmarker",
    "default_icon": {
      "72": "content/icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self';"
  },
  "icons": {
    "72": "content/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "shoaibshakeel381@youtubewatchmarker",
      "strict_min_version": "109.0"
    }
  }
}

